@model List<DoAn_LTWeb_TRINHCHITAI.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<header>
    <nav class="bg-white border-gray-200 px-4 lg:px-6 py-2.5 dark:bg-gray-800">
        <div class="flex flex-wrap justify-between items-center mx-auto max-w-screen-xl">
            <div style="display:flexbox;column-gap:20px" class="flex items-center">
                <select id="sort" onchange="handSelect()" class="form-select" aria-label="Default select example" style="width:auto">
                    <option value="" selected>Open this select menu</option>
                    <option value="TangID">Sap Xep tang dan theo ID</option>
                    <option value="GiamID">Sap Xep giam dan theo ID</option>
                    <option value="TangName">Sap Xep tang dan theo Ten</option>
                    <option value="GiamName">Sap xep giam dan theo Ten</option>
                </select>
            </div>
            <button type="button" class="focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900">
                <div class="flex items-center lg:order-2 ">
                    <a href="/Product/ThemSP" class="">Thêm Mới Sản Phẩm</a>
                </div>
                
            </button>
        </div>
    </nav>
</header>
<section class="items-center lg:flex bg-white  font-poppins dark:bg-gray-800 " style="background-color:white">
    <div class="justify-center flex-1 max-w-6xl px-4 py-4 mx-auto lg:py-8 md:px-6">
        <div class="pt-4 rounded shadow bg-stone-100 dark:bg-gray-900" style="background-color:white">
            <div class="flex flex-wrap items-center justify-between px-6 pb-4 border-b dark:border-gray-700">
                <h2 class="mb-4 text-xl font-bold md:mb-0 dark:text-gray-400">Danh Mục Sản Phẩm</h2>
            </div>
            <div class="p-4 overflow-x-auto">
                <table class="w-full table-auto">
                    <thead>
                        <tr class="text-sm text-left text-gray-500 dark:text-gray-400">
                            <th class="flex items-center px-6 pb-3 font-medium dark:text-gray-400">
                                <span>Tên Sản Phẩm</span>
                            </th>
                            <th class="px-6 pb-3 font-medium ">Giá Tiền </th>
                            <th class="px-6 pb-3 font-medium">Mô Tả </th>
                            <th class="px-6 pb-3 font-medium">Ảnh Sản Phẩm </th>
                            <th class="px-6 pb-3 font-medium"> Hành Động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr class="text-sm bg-white dark:text-gray-400 dark:bg-gray-800">
                                <td class="flex items-center px-6 py-5 font-medium">
                                    <p class="">@product.ProductName</p>
                                </td>
                                <td class="px-6 py-5 font-medium ">@product.ProductPrice</td>
                                <td class="px-6 py-5 font-medium ">@product.Description</td>
                                <td class="px-6 py-5 font-medium">
                                    <span class="text-blue-400 dark:text-blue-300"><img width=50; src=~/Content/Image/@product.Image></span>
                                </td>
                                <td class="flex items-center px-6 py-5 ">
                                    <a href="/Product/SuaSP/@product.ProductID"
                                       class="font-medium text-blue-600 hover:text-blue-500 dark:hover:text-gray-300 dark:text-blue-300">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                             fill="currentColor" class="w-4 h-4 mr-3 bi bi-pencil-square"
                                             viewBox="0 0 16 16">
                                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                            <path fill-rule="evenodd"
                                                  d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                        </svg>
                                    </a>
                                    <a href="/Product/XoaSP/@product.ProductID"
                                       class="font-medium text-red-600 hover:text-red-500 dark:hover:text-red-300 dark:text-red-400">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                             fill="currentColor" class="w-4 h-4 bi bi-trash-fill" viewBox="0 0 16 16">
                                            <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" />
                                        </svg>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="flex justify-end pt-4 mt-4 border-t dark:border-gray-700">
                    <nav aria-label="page-navigation">
                        <ul class="flex list-style-none">
                            @for (int i = 0; i < ViewBag.NoOfPages; i++)
                            {
                                <li class="page-item">
                                    <a class="relative block px-3 py-1.5 mr-3 text-base hover:text-blue-700 transition-all duration-300 hover:bg-blue-200 dark:hover:text-gray-400 dark:hover:bg-gray-700 rounded-md text-gray-100 bg-blue-600"
                                       href="/Product/Index?page=@(i+1)">
                                        @(i+1)
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
        function handSelect() {
            const valueSelect = document.getElementById("sort").value;
            location.href = '/Product/Index?search=@ViewBag.search&SortColumn=' + valueSelect + '&page=@ViewBag.page'//duong dan
            //doi so truyen di phai y het nhu ben danh sach Index nhan vien
        }
</script>